    "def rsi_momentum_strategy(df, rsi_period=14, oversold=30, overbought=70):\n",
    "    \"\"\"\n",
    "    RSIベースのモメンタム戦略\n",
    "    \"\"\"\n",
    "    signals = pd.Series(0, index=df.index)\n",
    "    \n",
    "    # RSI計算\n",
    "    delta = df['price'].diff()\n",
    "    gain = (delta.where(delta > 0, 0)).rolling(window=rsi_period).mean()\n",
    "    loss = (-delta.where(delta < 0, 0)).rolling(window=rsi_period).mean()\n",
    "    rs = gain / loss\n",
    "    rsi = 100 - (100 / (1 + rs))\n",
    "    \n",
    "    # 過売りからの反発で買い\n",
    "    buy_signal = (rsi > oversold) & (rsi.shift(1) <= oversold)\n",
    "    signals[buy_signal] = 1\n",
    "    \n",
    "    # 過熱からの反発で売り\n",
    "    sell_signal = (rsi < overbought) & (rsi.shift(1) >= overbought)\n",
    "    signals[sell_signal] = -1\n",
    "    \n",
    "    return signals\n",
    "\n",
    "# RSIモメンタム戦略のバックテスト\n",
    "rsi_signals = rsi_momentum_strategy(df, 14, 30, 70)\n",
    "\n",
    "rsi_strategy = TradingStrategy()\n",
    "rsi_portfolio, rsi_trades = rsi_strategy.backtest(df, rsi_signals)\n",
    "rsi_metrics = rsi_strategy.calculate_metrics(df)\n",
    "\n",
    "print(\"=== RSIモメンタム戦略 (30/70) ===")\n",
    "for metric, value in rsi_metrics.items():\n",
    "    if 'return' in metric or 'volatility' in metric or 'drawdown' in metric:\n",
    "        print(f\"{metric}: {value:.4f} ({value*100:.2f}%)\")\n",
    "    else:\n",
    "        print(f\"{metric}: {value:.4f}\")\n",
    "\n",
    "print(f\"\\nシグナル数: 買い={sum(rsi_signals==1)}, 売り={sum(rsi_signals==-1)}\")"
