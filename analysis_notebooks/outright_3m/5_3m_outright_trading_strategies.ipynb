    "def mean_reversion_strategy(df, window=20, threshold=2.0):\n",
    "    \"\"\"\n",
    "    ミーンリバージョン戦略（ボリンジャーバンドベース）\n",
    "    \"\"\"\n",
    "    signals = pd.Series(0, index=df.index)\n",
    "    \n",
    "    # ボリンジャーバンド計算\n",
    "    ma = df['price'].rolling(window=window).mean()\n",
    "    std = df['price'].rolling(window=window).std()\n",
    "    upper_band = ma + (std * threshold)\n",
    "    lower_band = ma - (std * threshold)\n",
    "    \n",
    "    # 下位バンドで買い\n",
    "    buy_signal = (df['price'] < lower_band) & (df['price'].shift(1) >= lower_band.shift(1))\n",
    "    signals[buy_signal] = 1\n",
    "    \n",
    "    # 上位バンドで売り\n",
    "    sell_signal = (df['price'] > upper_band) & (df['price'].shift(1) <= upper_band.shift(1))\n",
    "    signals[sell_signal] = -1\n",
    "    \n",
    "    # 中央線でクローズ\n",
    "    close_signal = ((df['price'] > ma) & (df['price'].shift(1) <= ma.shift(1))) | \\\n",
    "                  ((df['price'] < ma) & (df['price'].shift(1) >= ma.shift(1)))\n",
    "    \n",
    "    return signals\n",
    "\n",
    "# ミーンリバージョン戦略のバックテスト\n",
    "mr_signals = mean_reversion_strategy(df, 20, 2.0)\n",
    "\n",
    "mr_strategy = TradingStrategy()\n",
    "mr_portfolio, mr_trades = mr_strategy.backtest(df, mr_signals)\n",
    "mr_metrics = mr_strategy.calculate_metrics(df)\n",
    "\n",
    "print(\"=== ミーンリバージョン戦略 (ボリンジャーバンド) ===")\n",
    "for metric, value in mr_metrics.items():\n",
    "    if 'return' in metric or 'volatility' in metric or 'drawdown' in metric:\n",
    "        print(f\"{metric}: {value:.4f} ({value*100:.2f}%)\")\n",
    "    else:\n",
    "        print(f\"{metric}: {value:.4f}\")\n",
    "\n",
    "print(f\"\\nシグナル数: 買い={sum(mr_signals==1)}, 売り={sum(mr_signals==-1)}\")"
   ]
