    "def ml_based_strategy(df, lookback=50):\n",
    "    \"\"\"\n",
    "    機械学習ベースの予測戦略\n",
    "    \"\"\"\n",
    "    signals = pd.Series(0, index=df.index)\n",
    "    \n",
    "    # 特徴量作成\n",
    "    features = pd.DataFrame(index=df.index)\n",
    "    \n",
    "    # ラグ特徴\n",
    "    for lag in [1, 2, 3, 5]:\n",
    "        features[f'return_lag_{lag}'] = df['returns'].shift(lag)\n",
    "        features[f'price_lag_{lag}'] = df['price'].shift(lag)\n",
    "    \n",
    "    # 移動平均比\n",
    "    features['price_ma5_ratio'] = df['price'] / df['ma5']\n",
    "    features['price_ma20_ratio'] = df['price'] / df['ma20']\n",
    "    \n",
    "    # ボラティリティ\n",
    "    features['volatility'] = df['volatility']\n",
    "    features['rsi'] = df['rsi']\n",
    "    \n",
    "    # ターゲット（翼日のリターン）\n",
    "    target = df['returns'].shift(-1)\n",
    "    \n",
    "    # 欠損値除去\n",
    "    clean_data = pd.concat([features, target], axis=1).dropna()\n",
    "    X = clean_data.iloc[:, :-1]\n",
    "    y = clean_data.iloc[:, -1]\n",
    "    \n",
    "    if len(X) < lookback * 2:\n",
    "        return signals\n",
    "    \n",
    "    # ローリングウィンドウでモデル学習と予測\n",
    "    for i in range(lookback, len(X)):\n",
    "        # 学習データ\n",
    "        X_train = X.iloc[i-lookback:i]\n",
    "        y_train = y.iloc[i-lookback:i]\n",
    "        \n",
    "        # 予測データ\n",
    "        X_pred = X.iloc[i:i+1]\n",
    "        \n",
    "        try:\n",
    "            # Random Forestモデル\n",
    "            model = RandomForestRegressor(n_estimators=50, random_state=42)\n",
    "            model.fit(X_train, y_train)\n",
    "            \n",
    "            # 予測\n",
    "            prediction = model.predict(X_pred)[0]\n",
    "            \n",
    "            # シグナル生成（予測が闾値以上の場合）\n",
    "            threshold = y_train.std() * 0.5  # 標準偏差の0.5倍\n",
    "            \n",
    "            if prediction > threshold:\n",
    "                signals.iloc[i] = 1\n",
    "            elif prediction < -threshold:\n",
    "                signals.iloc[i] = -1\n",
    "            \n",
    "        except Exception:\n",
    "            continue\n",
    "    \n",
    "    return signals\n",
    "\n",
    "# 機械学習ベース戦略のバックテスト\n",
    "print(\"機械学習モデル学習中...(数分かかります)\")\n",
    "ml_signals = ml_based_strategy(df, 50)\n",
    "\n",
    "ml_strategy = TradingStrategy()\n",
    "ml_portfolio, ml_trades = ml_strategy.backtest(df, ml_signals)\n",
    "ml_metrics = ml_strategy.calculate_metrics(df)\n",
    "\n",
    "print(\"=== 機械学習ベース戦略 (Random Forest) ===")\n",
    "for metric, value in ml_metrics.items():\n",
    "    if 'return' in metric or 'volatility' in metric or 'drawdown' in metric:\n",
    "        print(f\"{metric}: {value:.4f} ({value*100:.2f}%)\")\n",
    "    else:\n",
    "        print(f\"{metric}: {value:.4f}\")\n",
    "\n",
    "print(f\"\\nシグナル数: 買い={sum(ml_signals==1)}, 売り={sum(ml_signals==-1)}\")"
