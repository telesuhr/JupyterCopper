    "def volatility_breakout_strategy(df, lookback=20, vol_threshold=1.5):\n",
    "    \"\"\"\n",
    "    ボラティリティブレイクアウト戦略\n",
    "    \"\"\"\n",
    "    signals = pd.Series(0, index=df.index)\n",
    "    \n",
    "    # ボラティリティ計算\n",
    "    volatility = df['returns'].rolling(window=lookback).std()\n",
    "    vol_ma = volatility.rolling(window=lookback).mean()\n",
    "    \n",
    "    # 価格レンジ\n",
    "    high_lookback = df['price'].rolling(window=lookback).max()\n",
    "    low_lookback = df['price'].rolling(window=lookback).min()\n",
    "    \n",
    "    # 高ボラティリティ環境でのブレイクアウト\n",
    "    high_vol_condition = volatility > (vol_ma * vol_threshold)\n",
    "    \n",
    "    # 上方ブレイクアウト\n",
    "    upward_breakout = (df['price'] > high_lookback.shift(1)) & high_vol_condition\n",
    "    signals[upward_breakout] = 1\n",
    "    \n",
    "    # 下方ブレイクアウト\n",
    "    downward_breakout = (df['price'] < low_lookback.shift(1)) & high_vol_condition\n",
    "    signals[downward_breakout] = -1\n",
    "    \n",
    "    return signals\n",
    "\n",
    "# ボラティリティブレイクアウト戦略のバックテスト\n",
    "vol_signals = volatility_breakout_strategy(df, 20, 1.5)\n",
    "\n",
    "vol_strategy = TradingStrategy()\n",
    "vol_portfolio, vol_trades = vol_strategy.backtest(df, vol_signals)\n",
    "vol_metrics = vol_strategy.calculate_metrics(df)\n",
    "\n",
    "print(\"=== ボラティリティブレイクアウト戦略 ===")\n",
    "for metric, value in vol_metrics.items():\n",
    "    if 'return' in metric or 'volatility' in metric or 'drawdown' in metric:\n",
    "        print(f\"{metric}: {value:.4f} ({value*100:.2f}%)\")\n",
    "    else:\n",
    "        print(f\"{metric}: {value:.4f}\")\n",
    "\n",
    "print(f\"\\nシグナル数: 買い={sum(vol_signals==1)}, 売り={sum(vol_signals==-1)}\")"
