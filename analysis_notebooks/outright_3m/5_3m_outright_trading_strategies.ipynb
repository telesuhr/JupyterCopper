    "## 2. バックテストフレームワーク"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": null,
   "metadata": {},
   "outputs": [],
   "source": [
    "class TradingStrategy:\n",
    "    \"\"\"\n",
    "    トレーディング戦略のバックテスト用ベースクラス\n",
    "    \"\"\"\n",
    "    \n",
    "    def __init__(self, initial_capital=100000):\n",
    "        self.initial_capital = initial_capital\n",
    "        self.positions = []\n",
    "        self.trades = []\n",
    "        self.portfolio_value = []\n",
    "    \n",
    "    def backtest(self, df, signals):\n",
    "        \"\"\"\n",
    "        バックテスト実行\n",
    "        signals: 1=買い, -1=売り, 0=ホールド\n",
    "        \"\"\"\n",
    "        capital = self.initial_capital\n",
    "        position = 0  # 現在のポジション\n",
    "        position_price = 0  # ポジション取得価格\n",
    "        \n",
    "        portfolio_values = []\n",
    "        trades = []\n",
    "        \n",
    "        for i, (date, row) in enumerate(df.iterrows()):\n",
    "            price = row['price']\n",
    "            signal = signals.iloc[i] if i < len(signals) else 0\n",
    "            \n",
    "            # ポジションの変更\n",
    "            if signal == 1 and position <= 0:  # 買いシグナル\n",
    "                if position < 0:  # ショートクローズ\n",
    "                    capital += (position_price - price) * abs(position)\n",
    "                    trades.append({\n",
    "                        'date': date,\n",
    "                        'type': 'close_short',\n",
    "                        'price': price,\n",
    "                        'quantity': abs(position),\n",
    "                        'pnl': (position_price - price) * abs(position)\n",
    "                    })\n",
    "                \n",
    "                # ロングオープン\n",
    "                position = capital / price\n",
    "                position_price = price\n",
    "                capital = 0\n",
    "                trades.append({\n",
    "                    'date': date,\n",
    "                    'type': 'open_long',\n",
    "                    'price': price,\n",
    "                    'quantity': position,\n",
    "                    'pnl': 0\n",
    "                })\n",
    "            \n",
    "            elif signal == -1 and position >= 0:  # 売りシグナル\n",
    "                if position > 0:  # ロングクローズ\n",
    "                    capital = position * price\n",
    "                    trades.append({\n",
    "                        'date': date,\n",
    "                        'type': 'close_long',\n",
    "                        'price': price,\n",
    "                        'quantity': position,\n",
    "                        'pnl': (price - position_price) * position\n",
    "                    })\n",
    "                \n",
    "                # ショートオープン\n",
    "                position = -capital / price\n",
    "                position_price = price\n",
    "                capital = 0\n",
    "                trades.append({\n",
    "                    'date': date,\n",
    "                    'type': 'open_short',\n",
    "                    'price': price,\n",
    "                    'quantity': abs(position),\n",
    "                    'pnl': 0\n",
    "                })\n",
    "            \n",
    "            # ポートフォリオ価値の計算\n",
    "            if position > 0:  # ロングポジション\n",
    "                portfolio_value = position * price\n",
    "            elif position < 0:  # ショートポジション\n",
    "                portfolio_value = self.initial_capital + (position_price - price) * abs(position)\n",
    "            else:  # キャッシュ\n",
    "                portfolio_value = capital\n",
    "            \n",
    "            portfolio_values.append(portfolio_value)\n",
    "        \n",
    "        # 最終ポジションクローズ\n",
    "        if position != 0:\n",
    "            final_price = df['price'].iloc[-1]\n",
    "            if position > 0:\n",
    "                capital = position * final_price\n",
    "                pnl = (final_price - position_price) * position\n",
    "            else:\n",
    "                capital = self.initial_capital + (position_price - final_price) * abs(position)\n",
    "                pnl = (position_price - final_price) * abs(position)\n",
    "            \n",
    "            trades.append({\n",
    "                'date': df.index[-1],\n",
    "                'type': 'final_close',\n",
    "                'price': final_price,\n",
    "                'quantity': abs(position),\n",
    "                'pnl': pnl\n",
    "            })\n",
    "        \n",
    "        self.trades = trades\n",
    "        self.portfolio_value = portfolio_values\n",
    "        \n",
    "        return portfolio_values, trades\n",
    "    \n",
    "    def calculate_metrics(self, df):\n",
    "        \"\"\"\n",
    "        パフォーマンスメトリクスの計算\n",
    "        \"\"\"\n",
    "        if len(self.portfolio_value) == 0:\n",
    "            return {}\n",
    "        \n",
    "        portfolio_series = pd.Series(self.portfolio_value, index=df.index)\n",
    "        returns = portfolio_series.pct_change().dropna()\n",
    "        \n",
    "        # 基本メトリクス\n",
    "        total_return = (portfolio_series.iloc[-1] / self.initial_capital) - 1\n",
    "        annual_return = (1 + total_return) ** (252 / len(portfolio_series)) - 1\n",
    "        volatility = returns.std() * np.sqrt(252)\n",
    "        sharpe_ratio = annual_return / volatility if volatility > 0 else 0\n",
    "        \n",
    "        # ドローダウン計算\n",
    "        rolling_max = portfolio_series.expanding().max()\n",
    "        drawdown = (portfolio_series - rolling_max) / rolling_max\n",
    "        max_drawdown = drawdown.min()\n",
    "        \n",
    "        # トレード統計\n",
    "        completed_trades = [t for t in self.trades if t['pnl'] != 0]\n",
    "        winning_trades = [t for t in completed_trades if t['pnl'] > 0]\n",
    "        win_rate = len(winning_trades) / len(completed_trades) if completed_trades else 0\n",
    "        \n",
    "        return {\n",
    "            'total_return': total_return,\n",
    "            'annual_return': annual_return,\n",
    "            'volatility': volatility,\n",
    "            'sharpe_ratio': sharpe_ratio,\n",
    "            'max_drawdown': max_drawdown,\n",
    "            'win_rate': win_rate,\n",
    "            'total_trades': len(completed_trades)\n",
    "        }\n",
    "\n",
    "print(\"バックテストフレームワーク定義完了\")"
   ]
