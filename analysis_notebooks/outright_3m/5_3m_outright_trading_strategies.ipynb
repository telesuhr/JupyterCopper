    "def moving_average_crossover_strategy(df, short_window=10, long_window=50):\n",
    "    \"\"\"\n",
    "    移動平均クロスオーバー戦略\n",
    "    \"\"\"\n",
    "    signals = pd.Series(0, index=df.index)\n",
    "    \n",
    "    short_ma = df['price'].rolling(window=short_window).mean()\n",
    "    long_ma = df['price'].rolling(window=long_window).mean()\n",
    "    \n",
    "    # ゴールデンクロス: 買いシグナル\n",
    "    golden_cross = (short_ma > long_ma) & (short_ma.shift(1) <= long_ma.shift(1))\n",
    "    signals[golden_cross] = 1\n",
    "    \n",
    "    # デッドクロス: 売りシグナル\n",
    "    dead_cross = (short_ma < long_ma) & (short_ma.shift(1) >= long_ma.shift(1))\n",
    "    signals[dead_cross] = -1\n",
    "    \n",
    "    return signals\n",
    "\n",
    "# 移動平均クロスオーバー戦略のバックテスト\n",
    "ma_signals = moving_average_crossover_strategy(df, 10, 50)\n",
    "\n",
    "ma_strategy = TradingStrategy()\n",
    "ma_portfolio, ma_trades = ma_strategy.backtest(df, ma_signals)\n",
    "ma_metrics = ma_strategy.calculate_metrics(df)\n",
    "\n",
    "print(\"=== 移動平均クロスオーバー戦略 (MA10/MA50) ===")\n",
    "for metric, value in ma_metrics.items():\n",
    "    if 'return' in metric or 'volatility' in metric or 'drawdown' in metric:\n",
    "        print(f\"{metric}: {value:.4f} ({value*100:.2f}%)\")\n",
    "    else:\n",
    "        print(f\"{metric}: {value:.4f}\")\n",
    "\n",
    "print(f\"\\nシグナル数: 買い={sum(ma_signals==1)}, 売り={sum(ma_signals==-1)}\")"
   ]
